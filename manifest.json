{
  "manifest_version": 2,
  "name": "CTUET Captcha Autocomplete",
  "description": "Tự động điền captcha cho trang pdaotao.ctuet.edu.vn.",
  "version": "1.2",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "https://pdaotao.ctuet.edu.vn/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://pdaotao.ctuet.edu.vn/*"],
      "js": [
        "assets/js/captcha_autocomplete.js"
      ]
    }
  ]
}